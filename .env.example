# Database Configuration (Required for initial setup)
POSTGRES_URL=postgres://user:password@host:5432/database
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxx

# Encryption Key (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-64-character-hex-string-here

# Optional
NODE_ENV=production

# Email Configuration (Optional but recommended)
EMAIL_PROVIDER=smtp
EMAIL_FROM_ADDRESS=noreply@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user
SMTP_PASSWORD=pass

# Webhook Secret (for external integrations)
WEBHOOK_SECRET=your-webhook-secret

# Support Configuration (Optional)
SUPPORT_EMAIL=anisdzed@gmail.com
SUPPORT_NAME=ProVision Support Team

# Error Tracking (Optional - for production monitoring)
ENABLE_SENTRY=false
SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_ENV=production
NEXT_PUBLIC_SENTRY_DEV_MODE=false

# Auth (NextAuth.js)
AUTH_SECRET= # Generated with npx auth secret
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
MICROSOFT_ENTRA_ID_CLIENT_ID=
MICROSOFT_ENTRA_ID_CLIENT_SECRET=
MICROSOFT_ENTRA_ID_TENANT_ID=


# Analytics (Optional)
ENABLE_ANALYTICS=false

# Cron Jobs (Vercel)
CRON_SECRET=your-cron-secret-here  # Secure the cron endpoint
